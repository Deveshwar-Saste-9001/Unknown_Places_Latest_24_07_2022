<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/travel222"
    tools:context=".LoginMenuActivity">

    <TextView
        android:id="@+id/skip_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passlayout112"
            android:layout_width="0dp"
        app:hintTextColor="@color/black"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="12dp"
            android:background="@drawable/slider_background"
            android:backgroundTint="#B4FFFFFF"
            android:textColorHint="#000000"
            app:layout_constraintBottom_toTopOf="@+id/passlayout234"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:passwordToggleEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginEmail"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#000000"
            android:hint="Email"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passlayout234"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:foregroundTint="@color/black"
            app:hintTextColor="@color/black"
            android:background="@drawable/slider_background"
            android:backgroundTint="#B5FFFFFF"
            android:textColorHint="#000000"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/SignInbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:passwordToggleEnabled="true">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/loginuser_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:hint="Password"
                android:foregroundTint="@color/black"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="17sp"
                android:theme="@style/Theme.UnknownPlaces"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/SignInbtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/custombtnnew"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/SignupBtn"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/SignupBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/custombtn3"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SignInbtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Forget Password?"
            android:textColor="#7C0800"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SignInbtn"
            tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>